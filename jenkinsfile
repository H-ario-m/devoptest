pipeline {
    agent any
    tools {
        nodejs 'node'
    }
    options {
        timeout(time: 30, unit: 'SECONDS')
    }
    stages {
        stage('Build') {
            steps {
                bat 'npm install'
                echo 'Build is successful'
            }
        }
        stage('Test') {
            steps {
                bat 'npm test || echo "No tests defined"'
                echo 'Test is successful'
            }
        }
        stage('Deploy') {
            steps {
                bat 'npm run start'
                echo 'Deploy is successful'
            }
        }
        stage('Exit') {
            steps {
                echo 'Server is exiting'
            }
        }
    }
}
